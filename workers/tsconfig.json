{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ESNext",
    "baseUrl": "./",
    "isolatedModules": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../domain"
    },
    {
      "path": "../../infrastructure"
    }
  ]
}
